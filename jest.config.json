{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/web_unit/setup.js"],
  "moduleFileExtensions": ["js", "json", "vue"],
  "transform": {
    "^.+\\.vue$": "@vue/vue3-jest",
    "^.+\\.js$": "babel-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src_assets/common/assets/web/$1"
  },
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/third-party/",
    "/packaging/"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src_assets/common/assets/web/**/*.{js,vue}",
    "!src_assets/common/assets/web/**/node_modules/**"
  ],
  "testEnvironmentOptions": {
    "customExportConditions": ["node", "node-addons"]
  }
}
